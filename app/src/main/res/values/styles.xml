<resources>

    <style name="CardQuasar">
        <item name="android:layout_marginStart">@dimen/default_padding_minimum</item>
        <item name="android:layout_marginTop">@dimen/default_padding_minimum</item>
        <item name="android:layout_marginBottom">@dimen/default_padding_half</item>
        <item name="android:layout_marginEnd">@dimen/default_padding_minimum</item>
    </style>

    <style name="CardLiveData">
        <item name="android:layout_marginTop">@dimen/default_padding_minimum</item>
        <item name="android:layout_marginBottom">@dimen/default_padding_minimum</item>
        <item name="android:layout_marginEnd">@dimen/default_padding_half</item>
        <item name="android:layout_marginStart">@dimen/default_padding_minimum</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="colorPrimary">@color/teal_200</item>
        <item name="colorPrimaryDark">@color/teal_700</item>
        <item name="android:statusBarColor">@color/teal_700</item>
    </style>

    <style name="TextViewCards">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/default_margin_half</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/default_font_size_medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewQuasar" parent="TextViewCards">
        <item name="android:textSize">@dimen/default_font_size_large</item>
    </style>

</resources>
