<resources>

    <style name="CardQuasar">
        <item name="android:layout_marginStart">@dimen/default_padding_minimum</item>
        <item name="android:layout_marginTop">@dimen/default_padding_minimum</item>
        <item name="android:layout_marginBottom">@dimen/default_padding_half</item>
        <item name="android:layout_marginEnd">@dimen/default_padding_minimum</item>
    </style>

    <style name="CardLiveData">
        <item name="android:layout_marginTop">@dimen/default_padding_minimum</item>
        <item name="android:layout_marginBottom">@dimen/default_padding_minimum</item>
        <item name="android:layout_marginEnd">@dimen/default_padding_half</item>
        <item name="android:layout_marginStart">@dimen/default_padding_minimum</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="colorPrimary">@color/teal_200</item>
        <item name="colorPrimaryDark">@color/teal_700</item>
        <item name="android:statusBarColor">@color/teal_700</item>
    </style>

</resources>
