<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llQuasar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    tools:showIn="@layout/activity_main">

    <androidx.cardview.widget.CardView
        style="@style/CardQuasar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/default_padding_half"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/default_padding_double_half">

            <TextView
                style="@style/TextViewQuasar"
                android:text="@string/quasar_charged" />

            <TextView
                android:id="@+id/tvQuasarCharged"
                style="@style/TextViewQuasar"
                android:layout_marginBottom="@dimen/default_margin_half"
                tools:text="25 kW" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        style="@style/CardQuasar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_padding_half"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/default_padding_double_half">

            <TextView
                style="@style/TextViewQuasar"
                android:text="@string/quasar_discharged" />

            <TextView
                android:id="@+id/tvQuasarDischarged"
                style="@style/TextViewQuasar"
                android:layout_marginBottom="@dimen/default_margin_half"
                tools:text="25 kW" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>